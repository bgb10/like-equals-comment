{
  "name": "Like=Comment",
  "description": "Change your like to comment and vice versa!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://velog.io/@*"]
    }
  ]
}
